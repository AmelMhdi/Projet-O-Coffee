<%- include('partials/header') %>
  
<main>
  <section id="catalog">
    <h1>Notre catalogue</h1>

    <div class="articles only-display-3-articles" id="articles-list">
      <% allCoffeeData.forEach((coffee) => { %>
        <article class="catalog-card">
          <img 
            src="../images/coffees/<%= coffee.reference %>.png" 
            alt="<%= coffee.name %>"
          >
          <div class="catalog-card-details">
            <h2><%= coffee.name %></h2>
            <p>Origine <%= coffee.origin %></p>
            <p><%= coffee.price_per_kg %> € / kg</p>
            <a class="btn btn-container btn-details" href="/article/<%= coffee.id %>">
              Voir le détail
            </a>
          </div>
        </article>
      <% }) %>
    </div>

    <button class="btn-container" id="see-all-products-button">Voir tous les produits</button>
  </section>

</main>

<%- include('partials/footer') %>
